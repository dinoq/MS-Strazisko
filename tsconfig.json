{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "sourceMap": true
    // "strictNullChecks": true
    ,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "baseUrl": "src/",
    "paths": {
        "@features/*": ["features/*"],
        "@store/*": ["store/*"],
        "@styles/*": ["styles/*"],
        "@public/*": ["../public/*"],
        "@hooks/*": ["hooks/*"],
    }
  },
  "include": [
    "next-env.d.ts",
    "next-env-custom.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "foto copy.text",
    "src/features/admin/components/formComponents/FileChooser/FileChooser.tsx",
    "src/features/web/components/header/Header.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
